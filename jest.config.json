{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "setupFiles": [
    "./test_setup.ts"
  ],
  "testEnvironment": "jsdom",
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/templates/",
    "/public/",
    "/.cache"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}"
  ],
  "coveragePathIgnorePatterns": [
    ".*\\.d\\.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage"
}
